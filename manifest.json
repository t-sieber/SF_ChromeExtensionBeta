{
  "name": "Salesforce Administrator Toolkit",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Salesforce Administrator Toolkit"
    },
  "permissions": [
    "cookies",
    "tabs",
    "notifications",
    "*://*.force.com/",
    "*://*.documentforce.com/",
    "*://*.lightning.force.com/",
    "*://*.salesforce.com/"
  ]

}
